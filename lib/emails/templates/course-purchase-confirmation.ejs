            margin-bottom: 10px;
        }

        .content {
            padding: 40px 30px;
        }

        .purchase-summary {
            background: linear-gradient(135deg, #fff7ed, #ffedd5);
            border: 2px solid #f59e0b;
            border-radius: 12px;
            padding: 30px;
            margin: 30px 0;
        }

        .purchase-details {
            background-color: #f9fafb;
            border-radius: 8px;
            padding: 25px;
            margin: 25px 0;
